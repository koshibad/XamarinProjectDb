<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MeuDB.DetalhesPage">
	<ContentPage.Content>

		<StackLayout>

			<Entry x:Name="txtID" WidthRequest="150" HeightRequest="50" IsEnabled="false"/>
			<Entry x:Name="txtNome" WidthRequest="150" HeightRequest="50" />
			<Entry x:Name="txtTelefone" WidthRequest="150" HeightRequest="50" Keyboard="Telephone"/>
			<Entry x:Name="txtEmail" WidthRequest="150" HeightRequest="50"/>
			
			<Button Text="Salvar" WidthRequest="50" HeightRequest="30" Clicked="Salvar_Clicked"/>
			<Button Text="Cancelar" WidthRequest="50" HeightRequest="30" BackgroundColor="Red" 
				TextColor="White" Clicked="Cancelar_Clicked"/>
			
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
